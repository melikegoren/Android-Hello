<resources>
    <!-- Base application theme. -->
    <style name="Theme.AndroidHello" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_600</item>
        <item name="colorPrimaryVariant">@color/gray_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_600</item>
        <item name="colorSecondaryVariant">@color/gray_300</item>
        <item name="colorOnSecondary">@color/gray_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_800</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="SCREEN">
        <item name="android:background">@color/gray_300</item>
    </style>

    <style name="TEXT">
        <item name="android:backgroundTint">@color/gray_400</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="hintTextColor">@color/gray_600</item>
    </style>

    <style name="BUTTON">
        <item name="backgroundTint">@color/gray_800</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="SEARCHVIEW">
        <item name="android:background">@color/gray_600</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="TOOLBAR">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/gray_800</item>
    </style>

    <style name="BOTTOMNAVIGATION">
        <item name="android:background">@color/gray_700</item>
        <item name="itemIconTint">@color/yellow</item>
        <item name="itemTextColor">@color/yellow</item>
    </style>

    <style name="CARDVIEW">
        <item name="android:backgroundTint">@color/white</item>
    </style>




</resources>